<MudOverlay Visible="true" DarkBackground="true" AutoClose="false">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@Title</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>@Body</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButtonGroup OverrideStyles="false" Style="width:100%;">
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Primary" Style="width:50%;" Class="ml-auto" OnClick="@CancelDeleteVerify">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Secondary" Style="width:50%;" OnClick="@OnItemDeleted" Class="ml-auto">Delete</MudButton>
                </MudButtonGroup>

            </MudCardActions>
        </MudCard>
    </MudOverlay>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Body { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await InvokeAsync(StateHasChanged);
    }

    private async void CancelDeleteVerify()
    {
        await OnCancel.InvokeAsync();
    }

    private async void OnItemDeleted()
    {
        await OnDelete.InvokeAsync();
    }
}
